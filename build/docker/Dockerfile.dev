FROM golang:1.7.4

# ENVIRONMENT
ENV CGO_ENABLED 0
ENV GOBIN /go/bin
ENV PATH $PATH:/go/bin
ENV PS1 "#SPOTIFY-DEV# "

# INSTALL Node.js
RUN apt-get update
RUN apt-get install -y curl build-essential
RUN curl -sL https://goo.gl/HPtqsX -o node.sh
RUN bash node.sh
RUN apt-get install -y nodejs

# DEV DEPENDENCIES
RUN go get github.com/cespare/reflex
RUN npm i -g concurrently

# GOPATH
WORKDIR /go/src/github.com/cescoferraro/spotify
