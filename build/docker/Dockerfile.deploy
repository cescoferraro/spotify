FROM alpine:3.4
RUN     apk add -U git bash curl tree
RUN curl -o /usr/local/bin/kubectl https://storage.googleapis.com/kubernetes-release/release/v1.3.6/bin/linux/amd64/kubectl
ENV HOME=/config
RUN set -x && apk add --no-cache curl ca-certificates && chmod +x /usr/local/bin/kubectl && adduser kubectl -Du 2342 -h /config && kubectl version --client
WORKDIR /go/src/github.com/cescoferraro/spotify/
USER kubectl
