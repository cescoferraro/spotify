# unifying the coding style for different editors and IDEs => editorconfig.org

; indicate this is the root of the project
root = true

###########################################################
; common
###########################################################

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

###########################################################
; make
###########################################################

[*.sass]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2


[Makefile]
indent_style = tab
indent_size = 4

###########################################################
; markdown
###########################################################

[*.md]
trim_trailing_whitespace = false

###########################################################
; js
###########################################################

[*.js]
indent_style = tab
indent_size = 4

###########################################################
; ts
###########################################################

[*.tsx]
indent_size = 4
###########################################################
; golang
###########################################################

[*.go]
indent_style = tab
indent_size = 4
